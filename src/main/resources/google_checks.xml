<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <module name="TreeWalker">

    <module name="FinalLocalVariable">
      <message key="final.local.variable"
               value="This local variable can be final. Lock it down! 🔒"/>
    </module>

    <module name="UnusedImports">
      <message key="unused.import"
               value="You imported something you don't even use. Declutter it! 🧹"/>
    </module>

    <module name="NeedBraces">
      <message key="needBraces"
               value="Missing braces. Don’t trust one-liners without curly love. 🔁"/>
    </module>

    <module name="EmptyCatchBlock">
      <message key="catch.block.empty"
               value="Empty catch block! Don’t silently ignore your sins. 🙈"/>
    </module>

    <module name="WhitespaceAfter">
      <message key="ws.notFollowed"
               value="You need a space after this. Give it room to breathe. 😮‍💨"/>
    </module>

    <module name="WhitespaceAround">
      <message key="ws.notPreceded"
               value="Missing whitespace around operator or keyword. Spread it out. ↔️"/>
    </module>

    <module name="MissingSwitchDefault">
      <message key="missing.switch.default"
               value="Add a 'default' case. Cover all bases, always. 🛡️"/>
    </module>

  </module>

  <module name="FileTabCharacter">
    <property name="eachLine" value="true"/>
    <message key="file.contains.tab"
             value="No tabs allowed. Spaces only in this dojo. 🥋"/>
  </module>

  <module name="NewlineAtEndOfFile">
    <message key="missing.newline"
             value="Add a newline at the end. Give your file a proper send-off. 👋"/>
  </module>
</module>
